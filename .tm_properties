
# TextMate configuration

excludeInFolderSearch = "{ignore,dist,node_modules}"


# Setting TM_RUN_TARGET to be picked up by my Run Javascript Command
# Currently set up to run the files with some related 'test' code. 

[*.js]
TM_RUN_TARGET = "${TM_FILEPATH}"  

[src/parser.js]
TM_RUN_TARGET = "${TM_PROJECT_DIRECTORY}/test/parser.test.js"

[src/terms.js]
TM_RUN_TARGET = "${TM_PROJECT_DIRECTORY}/test/normalize.test.js"

[src/dfa.js]
TM_RUN_TARGET = "${TM_PROJECT_DIRECTORY}/test/dfa.test.js"

